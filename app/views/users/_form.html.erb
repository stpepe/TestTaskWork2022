<%= form_with model: @user do |f|%>
    <div class="mb-3 row mt-3">
        <%= f.label :email, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.email_field :email, required: true, placeholder: "Email", class: 'form-control' %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :name, 'Псевдоним', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.text_field :name, required: true, minlength: 2, class: 'form-control' %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :password, 'Пароль', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.password_field :password, required: true, minlength: 8, class: 'form-control' %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :password_confirmation, 'Подтвердите пароль', class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.password_field :password_confirmation, required: true, minlength: 8, class: 'form-control' %>
        </div>
    </div>
    <%= f.submit "Зарегистрироваться", class: 'btn btn-primary'%>
<% end %>