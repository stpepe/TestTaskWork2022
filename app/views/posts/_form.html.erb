<%= form_with model: @post do |f|%>
    <div class="mb-3 row">
        <%= f.label :title, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.text_field :title, placeholder: "Название", class: 'form-control' %>
        </div>
    </div>

    <div class="mb-3 row">
        <%= f.label :body, class: 'col-sm-2 col-form-label' %>
        <div class="col-sm-10">
            <%= f.text_area :body, placeholder: "Содержание", class: 'form-control' %>
        </div>
    </div>

    <%= f.submit "Опубликовать", class: 'btn btn-primary'%>
<% end %>